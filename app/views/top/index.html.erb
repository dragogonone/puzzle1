<div class="top_index">
  <div class="main">
    <div class="hack_link">
      <%= image_tag("/assets/images/koilaiku.png") %>
      <%= link_to "Hack!", signup_path%>
      <%= image_tag("/assets/images/pikariki.png") %>
    </div>
    <div class="winner_link">
      <a data-toggle="collapse" data-target="#winner">Winners(<%= @winner.count %>)</a>
    </div>
  </div>
  <div id="winner" class="collapse">
    <div class="accordion-inner">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>名前</th>
            <th>クリア日時</th>
            <th>コメント</th>
          </tr>
        </thead>
        <tbody>
          <% if @winner.present? %>
          <% @winner.each do |w| %>
          <tr>
            <td><%= w.name %></td>
            <td><%= w.win_at.in_time_zone('Tokyo') %></td>
            <td><%= w.win_comment%> </td>
          </tr>
          <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
