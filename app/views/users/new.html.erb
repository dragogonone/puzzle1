<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <fieldset>
      <legend>Sign up</legend>
      <%= h(flash[:danger]) %>
      <%= bootstrap_form_for @user, :url => {:action => 'create'} , layout: :horizontal do |f|  %>
      <%= f.text_field :name %>
      <%= f.password_field :password %>
      <%= f.form_group do %>
      <%= f.submit "Sign up", class: "btn btn-primary" %>
      <% end %>
      <% end %>

      <p>return user? <%= link_to "Log in!", login_path %></p>
    </fieldset>
  </div>
</div>
