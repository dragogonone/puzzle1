<h1>
投票フォーム
</h1>
<%= h(flash[:success]) %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <form role="form" class="form-horizontal" action="/puzzle" accept-charset="UTF-8" method="post">
      <div>
        <img src="/assets/images/pikachu.jpg" alt="Pikachu" width="100" height="100" />
        ぴかち●う：<%= current_user.pikachu %>

        <div class="radio-inline">
          <div class="radio">
            <label for="users_target_pikachu">
              <input class="form-control" type="radio" value="pikachu" checked="checked" name="target" id="users_target_pikachu" />
            </label>
          </div>
        </div>

        <div>
        <img src="/assets/images/coil.jpg" alt="Coil" width="100" height="100" />
        こい●：<%= current_user.coil %>

        <div class="radio-inline">
          <div class="radio">
            <label for="users_target_coil">
              <input class="form-control" type="radio" value="coil" name="target" id="users_target_coil" />
            </label>
          </div>
        </div>
      </div>

      <input type="submit" name="commit" value="Vote" class="btn btn-primary" />
</form>

      </div>

    <a rel="nofollow" data-method="delete" href="/login">Log out</a>
  </div>
</div>
